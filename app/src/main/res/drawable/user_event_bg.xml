<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false">
        <ripple android:color="@color/ripple_white">
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp"/>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:color="@color/main_gray" android:width="1dp"/>
                    <padding android:top="10dp" android:bottom="10dp" android:left="20dp" android:right="20dp"/>
                </shape>
            </item>

        </ripple>
    </item>

    <item android:state_activated="true">
        <ripple android:color="@color/ripple_white">
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp"/>
                    <solid android:color="@color/main_blue"/>
                    <stroke android:color="@color/main_blue" android:width="1dp"/>
                    <padding android:top="10dp" android:bottom="10dp" android:left="20dp" android:right="20dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>