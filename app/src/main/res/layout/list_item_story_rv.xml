<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_item_story_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#60FFFFFF">
        <ImageView
            android:id="@+id/list_item_story_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/story_item_bg"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/list_item_story_text"
        style="@style/regular"
        android:layout_below="@+id/list_item_story_card"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>